<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/play_bg"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/play_back"
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_back"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无播放歌曲"
                android:textColor="#fff"
                android:textSize="14sp"
                android:id="@+id/tv_play_music_name"
                android:layout_marginBottom="5dp"
                android:paddingRight="25dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无"
                android:textColor="#fff"
                android:textSize="12sp"
                android:id="@+id/tv_play_songer"
                android:paddingRight="25dp"
                />


        </LinearLayout>


    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">
        
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/tiaokong"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="20dp"
            />

        <com.edu.feicui.starskymusic.view.CircularSeekBar
            android:layout_width="290dp"
            android:layout_height="290dp"
            app:circle_color="#7a8ca3"
            app:circle_progress_color="#2c3f58"
            app:circle_stroke_width="5dp"
            app:circle_x_radius="145dp"
            app:circle_y_radius="145dp"
            app:max="100"
            app:pointer_alpha_ontouch="100"
            app:pointer_color="#fff"
            app:pointer_halo_border_width="0dp"
            app:pointer_halo_color="#2fffffff"
            app:pointer_halo_width="2dp"
            app:pointer_radius="7dp"
            app:progress="25"
            app:start_angle="-75.0"
            app:end_angle="255.0"
            app:use_custom_radii="true"
            android:layout_centerInParent="true"
            android:id="@+id/sc_music"
            />
        <com.pkmmte.view.CircularImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/play_center"
            android:id="@+id/iv_music"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:00"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:id="@+id/tv_total_time"
            />
        <com.edu.feicui.starskymusic.view.CircularSeekBar
            android:layout_width="350dp"
            android:layout_height="350dp"
            app:circle_color="#eff1f4"
            app:circle_progress_color="#38e59b"
            app:circle_stroke_width="5dp"
            app:circle_x_radius="175dp"
            app:circle_y_radius="175dp"
            app:max="100"
            app:pointer_alpha_ontouch="100"
            app:pointer_color="#fff"
            app:pointer_halo_border_width="0dp"
            app:pointer_halo_color="#2fffffff"
            app:pointer_halo_width="2dp"
            app:pointer_radius="10dp"
            app:progress="25"
            app:start_angle="15"
            app:end_angle="70"
            app:use_custom_radii="true"
            android:layout_centerInParent="true"
            android:id="@+id/cs_sound"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无歌词"
            android:textColor="#fff"
            android:textSize="14sp"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        >
        
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@mipmap/play_collect"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@mipmap/play_download"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@mipmap/play_share"
            />
        
    </LinearLayout>

    <View
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:background="#464c54"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@mipmap/play_random"
            android:id="@+id/iv_random"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@mipmap/play_last"
            android:id="@+id/iv_last"
            />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@mipmap/play_start"
            android:id="@+id/iv_start"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@mipmap/play_next"
            android:id="@+id/iv_next"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@mipmap/play_list"
            android:id="@+id/iv_list"
            />
    </LinearLayout>
</LinearLayout>