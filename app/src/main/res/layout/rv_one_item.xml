<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv_check_item"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:src="@drawable/selector_check"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Rolling In The Deep"
                android:textColor="#667373"
                android:layout_marginBottom="5dp"
                android:id="@+id/tv_song_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Adele"
                android:textColor="#aebbbb"
                android:id="@+id/tv_songer_name"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tail"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:id="@+id/iv_tail_item"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@mipmap/tail_bg"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:id="@+id/ll_tail"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/tail_delete"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textColor="#667373"
                android:textSize="16sp"
                android:layout_weight="1"
                android:id="@+id/tv_tail_delete"
                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/tail_download"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载"
                android:textColor="#667373"
                android:textSize="16sp"
                android:layout_weight="1"
                android:id="@+id/tv_tail_download"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/tail_collect"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textColor="#667373"
                android:textSize="16sp"
                android:layout_weight="1"
                android:id="@+id/tv_tail_collect"
                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/tail_share"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textColor="#667373"
                android:textSize="16sp"
                android:layout_weight="1"
                android:id="@+id/tv_tail_share"
                />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>